{
  "compileOnSave": false,
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "rootDir": "src",
    "outDir": "tmp/ts-out",
    "declaration": true,
    "declarationDir": "dist",
    "removeComments": false,
    "moduleResolution": "node",
    "module": "es6",
    "target": "es5",
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
